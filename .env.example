# Discord Bot Token - dapatkan dari https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Channel ID - untuk mengirim notifikasi donasi
DISCORD_CHANNEL_ID=your_channel_id_here

# Saweria Stream Key - dapatkan dari https://saweria.co/overlays
SAWERIA_STREAM_KEY=your_saweria_stream_key_here

# Saweria Username - untuk link donasi di command /donasi
SAWERIA_USERNAME=your_saweria_username

# (OPSIONAL) Role Rewards - untuk memberikan role khusus ke top donatur
# Klik kanan Server > Copy Server ID
GUILD_ID=your_server_id_here
# Klik kanan Role > Copy Role ID  
TOP_DONATOR_ROLE_ID=your_role_id_here

# (OPSIONAL) Voice Channel untuk Sound Alert
# Klik kanan Voice Channel > Copy Channel ID
VOICE_CHANNEL_ID=your_voice_channel_id_here
# Aktifkan sound alert (true/false)
ENABLE_SOUND_ALERT=false
# Nama file suara (letakkan di folder yang sama dengan index.js)
SOUND_FILE=alert.mp3

# (OPSIONAL) Text-to-Speech untuk membacakan pesan donasi di Voice Channel
# Aktifkan TTS (true/false)
ENABLE_TTS=false
# Bahasa TTS (id=Indonesia, en=English, dll)
TTS_LANGUAGE=id

# (OPSIONAL) Minimum Amount Alert
# Donasi di bawah jumlah ini tidak akan ditampilkan di Discord (0 = tampilkan semua)
MIN_ALERT_AMOUNT=0
# Donasi di bawah jumlah ini tidak akan dibacakan TTS (0 = bacakan semua)
MIN_TTS_AMOUNT=0

# (OPSIONAL) Channel untuk Summary otomatis (default: sama dengan DISCORD_CHANNEL_ID)
SUMMARY_CHANNEL_ID=your_summary_channel_id_here
